  <body id="home">


<%- include('navigation')-%>


    <div id="content">

      <form action="/update-user" method="post">
        <div class="form-group">
          <input class="form-control form-control-sm" type="text" name="firstName" value="<%=users[0].firstName%>">
        </div>
        <div class="form-group">
          <input class="form-control form-control-sm" type="text" name="lastName" value="<%=users[0].lastName%>">
        </div>
        <div class="form-group">
          <input class="form-control form-control-sm" type="text" name="email" value="<%=users[0].email%>">
        </div>
        <div class="form-group">
          <input class="form-control form-control-sm" type="text" name="phone" value="<%=users[0].phone%>">
        </div>
        <div class="form-group">
          <input class="form-control form-control-sm" type="text" name="Address" value="<%=users[0].Address%>">
        </div>
        <div class="form-group">
          <input class="form-control form-control-sm" type="text" name="zipcode" value="<%=users[0].zipcode%>">
        </div>
        <div>
          <input class="btn btn-info btn-sm" type="submit" value="valider">
